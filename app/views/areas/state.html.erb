<%- model_class = Store -%>
<div class="page-header">
  <h1>Self Storage in <%= params[:state] %></h1>
</div>

<table id="states">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:branded_name) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
    </tr>
  </thead>
  <tbody>
    <% @stores_in_state.each do |store| %>
      <tr>
        <td><%= store.branded_name %></td>
        <td><%= link_to store.city %></td>
      </tr>
    <% end %>
  </tbody>
</table>
